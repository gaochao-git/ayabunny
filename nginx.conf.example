# Nginx 配置示例 - 小智语音助手
# 复制到服务器: /etc/nginx/sites-available/ayabunny
# 启用: sudo ln -s /etc/nginx/sites-available/ayabunny /etc/nginx/sites-enabled/
# 重载: sudo nginx -t && sudo systemctl reload nginx

server {
    listen 80;
    listen 443 ssl;
    server_name your-domain.com;  # 修改为你的域名或 IP

    # SSL 证书（如果使用 HTTPS）
    # ssl_certificate /etc/nginx/ssl/cert.pem;
    # ssl_certificate_key /etc/nginx/ssl/key.pem;

    # 重要：允许上传大文件（儿歌等音频文件）
    client_max_body_size 100M;

    # 前端静态文件
    root /var/www/ayabunny/web/dist;
    index index.html;

    # 前端路由
    location / {
        try_files $uri $uri/ /index.html;
    }

    # 后端 API 代理
    location /api/ {
        proxy_pass http://127.0.0.1:8888;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # SSE 支持（流式响应）
        proxy_set_header Connection '';
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 86400s;

        # 上传大文件
        client_max_body_size 100M;
        proxy_request_buffering off;
    }

    # 音频文件缓存
    location /api/songs/audio/ {
        proxy_pass http://127.0.0.1:8888;
        proxy_cache_valid 200 7d;
        add_header Cache-Control "public, max-age=604800";
    }

    # 日志
    access_log /var/log/nginx/ayabunny_access.log;
    error_log /var/log/nginx/ayabunny_error.log;
}
